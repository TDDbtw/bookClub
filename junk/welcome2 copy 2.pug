  body
    .twoItems
      .one
        .container#sidebarContainer
          #sidebarAccordion.sidebar(style=" background-color: #000; color: #fff;")
            .card
              .card-header#categoriesHeading
                h2.mb-0
                  button.btn.btn-link(type="button", data-toggle="collapse", data-target="#categoriesCollapse", aria-expanded="true", aria-controls="categoriesCollapse")
                    | CATEGORIES

              #categoriesCollapse.collapse.show(aria-labelledby="categoriesHeading", data-parent="#sidebarAccordion")
                .card-body
                  ul.list-unstyled
                    li All Products
                    li Desktop Power Supplies
                    li Server Power Supplies (PSUs)

            .card
              .card-header#modularHeading
                h2.mb-0
                  button.btn.btn-link(type="button", data-toggle="collapse", data-target="#modularCollapse", aria-expanded="false", aria-controls="modularCollapse")
                    | MODULAR

              #modularCollapse.collapse(aria-labelledby="modularHeading", data-parent="#sidebarAccordion")
                .card-body
                  ul.list-unstyled
                    li Fully (37
                    li Semi (10)
                    li Fully Modular (4)


            .card
              .card-header#efficiencyHeading
                h2.mb-0
                  button.btn.btn-link(type="button", data-toggle="collapse", data-target="#efficiencyCollapse", aria-expanded="false", aria-controls="efficiencyCollapse")
                    | 80 PLUS EFFICIENCY

              #efficiencyCollapse.collapse(aria-labelledby="efficiencyHeading", data-parent="#sidebarAccordion")
                .card-body
                  ul.list-unstyled
                    li Gold (40)
                    li Bronze (18)
                    li Platinum (13)
                    li White â‘¢

            .card
              .card-header#powerHeading
                h2.mb-0
                  button.btn.btn-link(type="button", data-toggle="collapse", data-target="#powerCollapse", aria-expanded="false", aria-controls="powerCollapse")
                    | CONTINUOUS POWER W

              #powerCollapse.collapse(aria-labelledby="powerHeading", data-parent="#sidebarAccordion")
                .card-body
                  ul.list-unstyled
                    li 750 Watts (16)
                    li 850 Watts (15)
                    li 650 Watts (12)
                    li 1000 Watts (10)
                    li 550 Watts (7)
      .two
      section.row.mt-4.px-5
        each product in products

            .card.mx(style="width: 410px; height: 752.094px; border-radius: 30.75px; opacity: 0.71; background: linear-gradient(0deg, rgba(0, 0, 0, 0.20) 0%, rgba(0, 0, 0, 0.20) 100%), linear-gradient(155deg, #266958 3.82%, rgba(34, 44, 41, 0.20) 76.99%)") 
              a(href=`/products/${product._id}`)
                .heart-icon(style="text-align: right; margin-top:26.67px;margin-right:25.3px;",href=`/products/${product._id}`)
                  svg(xmlns="http://www.w3.org/2000/svg", width="34", height="34", viewBox="0 0 34 34", fill="none")
                    a(href="/products/${product._id}") 


include ../partials/sidemenu
style.
  body {
    background-color: #081c15;
    color: #e9ecef;
  }
  .container-fluid  {
    width: 90% !important;
    background-color: #1b4332;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0,0,0,0.3);
    padding: 2rem;
    position: absolute;
    top: 20%;
    margin-left:4%;
  }
  .form-control, .form-select {
    background-color: #2d6a4f;
    border-color: #52b788;
    color: #e9ecef;
  }
  .form-control:focus, .form-select:focus {
    background-color: #2d6a4f;
    border-color: #74c69d;
    color: #e9ecef;
    box-shadow: 0 0 0 0.25rem rgba(116, 198, 157, 0.25);
  }
  .btn-primary {
    background-color: #52b788;
    border-color: #52b788;
  }
  .btn-primary:hover, .btn-primary:focus {
    background-color: #40916c;
    border-color: #40916c;
  }
  .btn-secondary {
    background-color: #2d6a4f;
    border-color: #2d6a4f;
  }
  .btn-secondary:hover, .btn-secondary:focus {
    background-color: #1b4332;
    border-color: #1b4332;
  }
  .report-container {
    background-color: #2d6a4f;
    border-radius: 5px;
    padding: 1rem;
    margin-top: 2rem;
  }
  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 2rem;
    background-color: #1b4332;
    color: #e9ecef;
  }
  th, td {
    padding: 0.75rem;
    text-align: left;
    border: 1px solid #74c69d;
  }
  th {
    background-color: #40916c;
  }
  tbody tr:nth-child(even) {
    background-color: #2d6a4f;
  }
  .list-group-item {
    background-color: #2d6a4f !important;
    border-color: #52b788 !important;
  }

  .card {
    background-color: #1b4332 !important;
    border-color: #52b788 !important;
  }
#content-wrapper
  .container-fluid
    h1.text-center.mb-4 Sales Report
    
    form#filterForm.mb-4
      .row.g-3
        .col-md-4
          label.form-label(for='filterType') Filter By
          select#filterType.form-select(name='filterType')
            option(value='daily') Daily
            option(value='weekly') Weekly
            option(value='monthly') Monthly
            option(value='yearly') Yearly
            option(value='custom') Custom Date Range
        
        .col-md-4#startDateGroup.d-none
          label.form-label(for='startDate') Start Date
          input#startDate.form-control(type='date', name='startDate')
        
        .col-md-4#endDateGroup.d-none
          label.form-label(for='endDate') End Date
          input#endDate.form-control(type='date', name='endDate')
      
      .row.mt-3
        .col-12
          button.btn.btn-primary(type='submit')
            i.fas.fa-chart-line.me-2
            | Generate Report

    .report-container
      p.text-center No sales data available for the selected period.
      
    .row.mt-4
      .col-md-6
        button#downloadPdf.btn.btn-secondary.w-100
          i.fas.fa-file-pdf.me-2
          | Download PDF
      .col-md-6
        button#downloadExcel.btn.btn-secondary.w-100
          i.fas.fa-file-excel.me-2
          | Download Excel

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
  script(src="../../script/admin/sales-report.js")
  script.
    document.getElementById('filterType').addEventListener('change', function() {
      const customDateFields = document.getElementById('startDateGroup');
      const endDateField = document.getElementById('endDateGroup');
      if (this.value === 'custom') {
        customDateFields.classList.remove('d-none');
        endDateField.classList.remove('d-none');
      } else {
        customDateFields.classList.add('d-none');
        endDateField.classList.add('d-none');
      }
    });

            a.ms-2.icon#productList(href="/admin/products")
              i.bi.bi-bag.fs-4.ms-2
              span.ms-4 Products
          li.link-active
            a.ms-2.mt-2.icon#userList(href="/admin/users")
              i.bi.bi-people.fs-4.ms-2
              span.ms-4 Customers
          li.link-active
            a.ms-2.mt-2.icon#categoryList(href='/admin/category')
              i.bi.bi-grid.fs-4.ms-2
              span.ms-4 Categories
          li.link-active
            a.ms-2.mt-2.icon#orderList(href='/admin/orders')
              i.bi.bi-truck.fs-4.ms-2
              span.ms-4 Orders
          li.link-active#transactionList
            a.ms-2.mt-2.icon(href='/admin/transactions')
              i.bi.bi-coin.fs-4.ms-2
              span.ms-4 Transactions
          li.link-active
            a.ms-2.mt-2.icon(href='#')
              i.bi.bi-image-fill.fs-4.ms-2
              span.ms-4 Banner

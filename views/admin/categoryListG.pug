  //- script(defer src="../../script/admin/panel.js") 
  .containetr
    .create-button
      a(href='/admin/category/create') Create New Category
    table.category-table
      tbody
        tr
          th Name
          th Subcategories
          th Actions
       
        each category in categories
          tr
            td= category.name 
            td 
              each subcategory in subcategories
                if subcategory.category.id == category.id
                  | #{subcategory.name} , 
            td.action-buttons
              a.edit(href=`/admin/categories/${category.id}/edit`) Edit
              a.delete(data-id=category.id) Delete

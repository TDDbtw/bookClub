    .container-fluid.form-container
      h1.text-center.mb-4 Update Coupon
      form#couponForm
        .mb-3
          label.form-label(for='code') Coupon Code
          input#code.form-control(type='text', name='code', required='' value= coupon.code )
        .mb-3
          label.form-label(for='discount') Discount (%)
          input#discount.form-control(type='number', name='discount', required='' value= coupon.discount)
        .mb-3
          label.form-label(for='limit') Usage Limit
          input#limit.form-control(type='number', name='limit', required='' value= coupon.limit)
        .mb-3
          label.form-label(for='expiry') Expiry Date
          input#expiry.form-control(type='text', name='expiry', required='' placeholder ='hheh' value= formatDate(coupon.expiry))
        .mb-3
          label.form-label(for='minAmt') Minimum Amount
          input#minAmt.form-control(type='number', name='minAmt', required='' value= coupon.minAmt)
        .mb-3
          label.form-label(for='maxAmt') Maximum Amount
          input#maxAmt.form-control(type='number', name='maxAmt', required='' value= coupon.maxAmt)

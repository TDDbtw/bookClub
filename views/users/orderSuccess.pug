link(rel='stylesheet' href='../../../stylesheet/user/orderSuccess.css')

.container.text-white
  h1 Thank you! Your order has been placed.
  p
    | Your order number is: 
    span#order-number #123456
  h2 Order Summary:
  ul#order-summary
  p You will receive an email with tracking information shortly.
  a.track-button(href='#') Track your order

script.
  // Sample JavaScript to dynamically add order details (you'll need to adapt this)
  const orderSummary = document.getElementById("order-summary");
  const orderDetails = [
    { item: "Product 1", quantity: 2, price: "$19.99" },
    { item: "Product 2", quantity: 1, price: "$24.99" },
  ];
  orderDetails.forEach(item => {
    const listItem = document.createElement("li");
    listItem.textContent = `${item.quantity} x ${item.item} - ${item.price}`;
    orderSummary.appendChild(listItem);
  });
  

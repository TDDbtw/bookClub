  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
  link(rel="stylesheet", href="../../stylesheet/admin/coupons.css")
  script(src="//https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH00kS58PrEW3hmvZFEMg9Supu4T9jwmg/UplcUJOua9e+06TIzrkOnQ", crossorigin="anonymous")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns", crossorigin="anonymous")
  //- script(defer src="../../script/admin/panel.js") 
  main.container
      section.add-coupon
        h2 Add New Coupon
        form
          .form-group
            label(for='code') Coupon Code:
            input#code(type='text' name='code' required)
          .form-group
            label(for='discount') Discount (in %):
            input#discount(type='number' name='discount' min='1' required)
          .form-group
            label(for='expiry') Expiry Date:
            input#expiry(type='date' name='expiry' required)
          button(type='submit') Add Coupon
      section.coupon-list
        h2 Existing Coupons
        .table-responsive
          table
            thead
              tr
                th Code
                th Discount
                th Expiry Date
                th Actions
            tbody
              // Example Coupon Data - Replace with actual data from your database
              tr
                td SUMMER20
                td 15%
                td 2024-06-30
                td
                  button.edit Edit
                  button.delete Delete

 

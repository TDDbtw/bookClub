include ../partials/navbar
  title Order Details
  style.
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
    }
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    h1 {
      font-size: 24px;
      margin-bottom: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid black;
      padding: 5px;
    }
    th {
      text-align: center;
    }
    .total-amount {
      font-weight: bold;
    }
    .status {
      color: #fff;
      padding: 5px 10px;
      border-radius: 5px;
    }
    .status-pending {
      background-color: #ff9900;
    }
    .status-processing {
      background-color: #00cc00;
    }
    .status-shipped {
      background-color: #3366ff;
    }
    .status-delivered {
      background-color: #009900;
    }
    .status-cancelled {
      background-color: #ff0000;
    }
  .container
    h1 Order Details
    hr
    p
      strong Order ID:
      |  #{order._id}
    p
      strong User:
      |  #{order.user.name}
    p
      strong Address:
      |  #{order.address.address}
    table(border="1")
      thead
        tr
          th Product
          th Quantity
          th Product Price
      tbody
        each product in order.products
          tr
            td #{product.product.name}
            td #{product.quantity}
            td #{product.productPrice}
      tfoot
        tr
          td(colspan="2")
          td.total-amount #{order.totalAmount}
    p
      strong Payment Method:
      |  #{order.payment_method}
    p
      strong Payment Details:
      |  #{order.payment_details}
    p
      strong Status:
      span.status(class="status-#{order.status}") #{order.status}
    p
      strong Created At:
      |  #{order.created_a}
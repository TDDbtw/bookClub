#loading-overlay
  #loading-spinner
style.
  #loading-overlay {
  display: none;
  z-index: 7;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(22, 21, 21, 0.448); /* Semi-transparent white background */
  justify-content: center;
  align-items: center;
  z-index: 1000; /* Adjust as needed to ensure it's on top */
  }
  #loading-spinner {
  border: 8px solid #f3f3f3;
  border-top: 8px solid #3498db; /* Choose your spinner color */
  border-radius: 50%;
  width: 50px;
  height: 50px;
  position:absolute;
  top: 50%;
  left: 50%;
  animation: spin 1s linear infinite; /* Add a spinning animation */
  }
  @keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
  }
script.
  // Show the loading overlay
  function showLoading() {
  document.getElementById('loading-overlay').style.display = 'flex';
  }
  // Hide the loading overlay
  function hideLoading() {
  document.getElementById('loading-overlay').style.display = 'none';
  }
  // Simulate page loading (remove this in your actual code)
  setTimeout(hideLoading, 1000); // Replace with your actual page loading logic
  showLoading();

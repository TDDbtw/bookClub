mixin resources(pageType)
  // Core Styles (Always included)
  link(rel='stylesheet', href='../../../stylesheet/admin/dashboard.css')
  link(rel="stylesheet" href="../../../stylesheet/admin/sidemenu.css")
  // Page-Specific Styles 
  if pageType === "coupons"
    link(rel="stylesheet" href="../../../stylesheet/admin/couponsAdd.css")
  if pageType === "addCoupons"
    link(rel='stylesheet', href='../../stylesheet/admin/couponsAdd.css')
  // CDN-Hosted Libraries 
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js@1.12.0/src/toastify.min.css")
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css") 
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")

  // Google Fonts
  link(rel='preconnect' href='https://fonts.googleapis.com')
  link(rel='preconnect' href='https://fonts.gstatic.com', crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap', rel='stylesheet')

  // Core Scripts (Always included)
  script(defer, src="../../../script/admin/sidemenu.js")
  script(defer, src="../../../script/toast.js")
  script(defer, src="../../../script/confirmationModal.js")
  script(defer, src="../../../script/admin/confirmLogout.js") 


  // Page-Specific Scripts


  if pageType === "coupons"
    script( src="./script/admin/coupon.js" defer) 
  if pageType === "addCoupons"
      script(src='../../../../script/admin/couponValidation.js' defer) 








  // CDN-Hosted Scripts 
  script(src="https://code.jquery.com/jquery-3.6.4.min.js") 
  script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
  script(src="https://cdn.jsdelivr.net/npm/toastify-js@1.12.0/src/toastify.min.js")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js") 
  script(src="https://unpkg.com/htmx.org@1.9.10")
  script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
